{
  "name": "matabayan-monorepo",
  "version": "1.0.0",
  "description": "Real-Time Disaster Alert and Preparedness System for the Philippines",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd src/backend && npm install && cd ../frontend && npm install && cd ../..",
    "dev": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\" \"npm run server\" \"npm run client\"",
    "server": "cd src/backend && npm run dev",
    "client": "cd src/frontend && npm start",
    "build": "cd src/frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd src/backend && npm test",
    "test:frontend": "cd src/frontend && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gojatora/SE-FishingFrenzo-MATABAYAN"
  },
  "keywords": [
    "disaster-management",
    "philippines",
    "pagasa",
    "phivolcs",
    "real-time-alerts"
  ],
  "author": "MataBayan Team",
  "contributors": [
    "Adrian Paolo Follante <gojatora@github>",
    "Ram Andrei Manalo <ramandrei@github>",
    "Renzo Emmanuel Ramos <Renzo-Emmanuel@github>",
    "France Raphael Rivera <francerivera@github>",
    "Richard Torculas <richardtorculas@github>"
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
